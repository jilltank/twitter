@import "bootstrap-sprockets";
@import "bootstrap";
@import "font-awesome";

body{
	/*background: url(<%= asset_path "back.jpg" %>) no-repeat center center fixed;*/
	background-color: cornflowerblue;
	background-size: cover;
	font-family: 'Alice', serif;
}
.container{
	background-color: rgba(255,255,255,0.6);
	padding:0px 40px 20px 40px;
}
a{
	color:darkorchid;
}
.navbar{
	background-color: rgba(255,255,255,0.6);
	border: 0px;
}
.col-md-8, .col-md-4, .col-md-6, .col-md-4, .col-md-3{
	background-color: rgba(255,255,255,0.6);
	height:150px;
	border: 1px solid;
}
.tweet{
	font-weight: bold;
}
.message{
	font-size: 18px;
	padding-top: 20px;
}
.hover{
	background-color: transparent;
	color:tomato;
}